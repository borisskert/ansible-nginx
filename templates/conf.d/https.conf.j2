upstream {{site_name}}_upstream {
  server 172.17.0.1:{{upstream_port}};
}

server {
  listen 80;
  listen [::]:80;

  server_name {{site_server_name}};

  return 301 https://$server_name$request_uri;
}

server {
  listen 443 ssl http2;
  listen [::]:443 ssl http2;

  server_name {{site_server_name}};

  ssl_certificate           /etc/nginx/certs/live/{{site_server_name}}/fullchain.pem;
  ssl_certificate_key       /etc/nginx/certs/live/{{site_server_name}}/privkey.pem;
  ssl_trusted_certificate   /etc/nginx/certs/live/{{site_server_name}}/chain.pem;

  include /etc/nginx/rules/{{ssl_parameters_file}};

  location / {
    proxy_pass  http://{{site_name}}_upstream;

    include /etc/nginx/rules/{{proxy_parameters_file}};
  }

  location ~ /.well-known {
    root /var/www/html;
    allow all;
  }
}
