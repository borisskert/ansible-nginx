{% for upstream_name, upstream_url in item.value.upstreams.items() %}
upstream {{upstream_name}} {
  server {{upstream_url}};
}
{% endfor %}

{% if item.value.https %}
server {
  listen 80;
  listen [::]:80;

  server_name {{item.value.server_name}};
  return 301 https://$server_name$request_uri;
}

server {
  listen 443 ssl http2;
  listen [::]:443 ssl http2;

  server_name {{item.value.server_name}};

  ssl_certificate           /etc/nginx/certs/live/{{item.value.server_name}}/fullchain.pem;
  ssl_certificate_key       /etc/nginx/certs/live/{{item.value.server_name}}/privkey.pem;
  ssl_trusted_certificate   /etc/nginx/certs/live/{{item.value.server_name}}/chain.pem;

  include /etc/nginx/rules/{{ssl_parameters_file}};

{% for location_key, location_value in item.value.locations.items() %}
  location {{location_key}} {
{% if location_value is defined %}
{% for key, value in location_value.items() %}
    {{key}} {{ value }};
{% endfor %}
{% endif %}
  }

{% endfor %}
}

{% else %}
server {
  listen 80;
  listen [::]:80;

  server_name {{item.value.server_name}};

{% for location_key, location_value in item.value.locations.items() %}
  location {{location_key}} {
{% if location_value is defined %}
{% for key, value in location_value.items() %}
    {{key}} {{ value }};
{% endfor %}
{% endif %}
  }

{% endfor %}
}
{% endif %}
